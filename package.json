{
  "name": "steedos-webapp-nextjs",
  "version": "0.0.0",
  "repository": "https://gitlab.steedos.cn/steedos/steedos-webapp-nextjs.git",
  "author": "庄建国 <zhuangjianguo@steedos.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/**"
  ],
  "scripts": {
    "dev": "node dev-server.js",
    "dev:legacy": "node unpkg-local.js",
    "start": "cd apps/storybook && yarn storybook",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build",
    "build-object": "lerna run build-object",
    "build-app": "lerna run build-app --parallel",
    "unpkg": "node unpkg-local.js",
    "prepare": "husky install",
    "cnpm-sync": "lerna exec --no-private  -- cnpm sync \\$LERNA_PACKAGE_NAME",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@builder6/react": "^3.2.21",
    "lerna": "^6.6.2",
    "lodash": "^4.17.21",
    "postcss": "^8.1.10",
    "postcss-loader": "^4.1.0",
    "postcss-nested": "^5.0.1",
    "postcss-simple-vars": "^6.0.1",
    "tsdx": "^0.14.1",
    "vite": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-loader": "^8.2.5",
    "cnpm": "9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "express": "^4.21.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
